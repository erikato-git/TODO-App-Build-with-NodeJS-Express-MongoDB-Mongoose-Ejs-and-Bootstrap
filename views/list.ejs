<h3>{{viewTitle}} <a class="btn btn-secondary" href="/addOrEdit"><i class="fa fa-plus"></i> Create new task</a></h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.text}}</td>
            <td>{{this.time}}</td>
            <td>
                <a href="/update/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>